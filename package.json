{
  "name": "@rederly/backend-validation",
  "version": "0.0.0",
  "description": "A validation module for backend routes. Used as a glue between frontend and backend.",
  "main": "lib/index.js",
  "scripts": {
    "start": "ts-node src/index.ts",
    "build": "npm run clean && npm run generators && tsc && npm run post:build",
    "build:watch": "nodemon -x npm run build",
    "post:build": "ts-node ./utility-scripts/post-build.ts",
    "clean": "node ./utility-scripts/clean.js",
    "generate:json-types": "ts-node ./utility-scripts/generate-schema-types.ts",
    "generate:validated-types": "ts-node ./utility-scripts/generate-validated-types.ts",
    "generate:api-docs": "ts-node ./utility-scripts/generate-documentation.ts",
    "generate:route-array": "ts-node ./utility-scripts/generate-route-array.ts",
    "generate:indexes": "ts-node ./utility-scripts/generate-route-indexes.ts",
    "generators": "npm run generate:route-array && npm run generate:json-types && npm run generate:validated-types && npm run generate:api-docs && npm run generate:indexes",
    "postinstall": "echo 'backend-validation running postinstall' && npm run generators"
  },
  "author": "Rederly",
  "license": "GPL-3.0-or-later",
  "devDependencies": {
    "@types/body-parser": "^1.19.0",
    "@types/boom": "^7.3.0",
    "@types/express": "^4.17.11",
    "@types/fs-extra": "^9.0.8",
    "@types/json-schema": "^7.0.7",
    "@types/lodash": "^4.14.168",
    "@types/node": "^14.14.31",
    "@types/swagger-ui-dist": "^3.30.0",
    "fs-extra": "^9.1.0",
    "json-schema-to-typescript": "^10.1.3",
    "json-to-ts": "^1.7.0",
    "lodash": "^4.17.21",
    "nodemon": "^2.0.7",
    "openapi-types": "^7.2.3",
    "ts-node": "^9.1.1",
    "typescript": "^4.2.2"
  },
  "dependencies": {
    "ajv": "^7.2.1",
    "ajv-formats": "^1.5.1",
    "body-parser": "^1.19.0",
    "boom": "^7.3.0",
    "express": "^4.17.1",
    "swagger-ui-dist": "^3.45.0"
  },
  "nodemonConfig": {
    "ignore": [
      "**/*.test.ts",
      "**/*.spec.ts"
    ],
    "watch": [
      "src"
    ],
    "ext": "json",
    "execMap": {
      "ts": "node --require ts-node/register"
    },
    "signal": "SIGINT"
  }
}
